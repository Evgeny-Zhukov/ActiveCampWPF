<UserControl x:Class="ActiveCampWPF.DayElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActiveCampWPF"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="320">
    <Grid>

        <Border x:Name="DayInfo_border" BorderThickness="0" Width="310" Height="50" CornerRadius="10">
            
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="1"/>
            </Border.Background>
            
            <Label x:Name="DayInfo_DisplayOfElement" 
                   FontFamily="TimesNewRoman" FontSize="16" FontWeight="Bold" 
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content=""/>
        </Border>

    </Grid>
    
</UserControl>
