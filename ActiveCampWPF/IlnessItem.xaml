<UserControl x:Class="ActiveCampWPF.IlnessItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActiveCampWPF"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="310">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="IsAproved" Margin="2" Width="15" Height="15" Background="Transparent"></CheckBox>
        <Label x:Name="Title" Background="Transparent" Grid.Column="1" Margin="5,2,5,2"/>
    </Grid>
</UserControl>
